{
  "name": "Portal Pro",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "This extension improves the discoverability of lynda.com SSO portals.",

  "icons": { "16": "icons/icon-16.png",
             "48": "icons/icon-48.png",
             "128": "icons/icon-144.png"
             },
  "background": {
     "scripts": ["background.js"]
   },
  "content_scripts":
      [
        {
          "matches":["*://*.lynda.com/admin/portalsetup.aspx"],
          "js":["library/jquery-2.1.4.min.js","library/select2.min.js"],
          "css":["library/select2.css"],
          "run_at": "document_start"
        },
        {
          "matches":["*://*.lynda.com/admin/portalsetup.aspx"],
          "js":["injection.js"],
          "run_at": "document_end"
        }
      ],
  "permissions": [
    "tabs"
  ],
  "page_action": {
       "default_icon": "icons/icon-16.png",
       "default_title": "Portal Pro"
     },
  "web_accessible_resources": ["library/select-2-icons/*"],
  "content_security_policy": "default-src 'none'; style-src 'self'; script-src 'self'"
}
